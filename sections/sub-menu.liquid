{%- if section.settings.animations_reveal_on_scroll -%}
  <script src='{{ 'animations.js' | asset_url }}' defer='defer'></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }

  {% if section.settings.border_on_top or section.settings.border_on_bottom %}
    #section-{{ section.id }} {
        border-color: rgba(var(--color-foreground), 0.06);
    }
  {% endif %}

  .submenu__item {
      color: rgba(var(--color-foreground), 0.75);
      transition: all var(--duration-short) ease;
  }

  .submenu__item:hover {
      color: rgb(var(--color-foreground));
  }

  .submenu__item:hover .submenu__badge {
    background-color: rgba(var(--color-button), 0.95);
    background-color: color-mix(in srgb, rgb(var(--color-button)), black 5%);
  }

  .submenu__badge {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    padding: 0.1rem 0.45rem;
    text-shadow: 2px 0px 2px rgba(0,0,0,0.11);
  }

    .submenu__item-text {
        line-height: calc(1 + 0.3 / var(--font-body-scale));
    }
{%- endstyle -%}

<div
  id='section-{{ section.id }}'
  class='section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient {% if section.settings.border_on_top %} tw-border-t {% endif %}{% if section.settings.border_on_bottom %} tw-border-b {% endif %}'
>
  <div class='page-width tw-mx-auto tw-flex tw-flex-wrap tw-justify-center tw-items-start tw-gap-x-8 md:tw-gap-x-10'>
    {%- for block in section.blocks -%}
      <a
        href='{{ block.settings.link }}'
        class='submenu__item tw-flex tw-flex-row tw-items-center tw-justify-center{% if section.settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
        {{ block.shopify_attributes }}
        {% if section.settings.animations_reveal_on_scroll %}
          data-cascade
          style='--animation-order: {{ forloop.index }};'
        {% endif %}
      >
        {%- if block.settings.image != blank -%}
          <div class='tw-mr-3 lg:tw-hidden'>
            <img
              srcset='
                {% if block.settings.image.width >= 350 %}{{ block.settings.image | image_url: width: 350 }} 350w,{% endif %}
                {% if block.settings.image.width >= 750 %}{{ block.settings.image | image_url: width: 750 }} 750w,{% endif %}
                {{ block.settings.image | image_url }} {{ block.settings.image }}w
              '
              sizes='(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw'
              src='{{ block.settings.image | image_url: width: 750 }}'
              loading='lazy'
              fetchpriority='high'
              width='{{ block.settings.image.width }}'
              height='{{ block.settings.image.height }}'
              alt='{{ block.settings.image.alt | escape }}'
              class='submenu__item-image tw-w-10 tw-h-10 tw-rounded-full tw-object-cover'
            >
          </div>
        {%- endif -%}
        <span class='submenu__item-text tw-font-semibold tw-text-smd tw-text-center'>
          {%- if block.settings.badge_text != blank -%}
            <span class='submenu__badge tw-mr-3 tw-text-xs tw-font-bold tw-uppercase tw-rounded tw-px-2 tw-py-1'>
              {{- block.settings.badge_text -}}
            </span>
          {%- endif -%}
          {{ block.settings.text }}
        </span>
      </a>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Sub-menu",
  "class": "submenu",
  "enabled_on": {
    "groups": ["header"]
  },
  "max_blocks": 6,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-2"
    },
    {
      "type": "checkbox",
      "id": "animations_reveal_on_scroll",
      "label": "Animate reveal on scroll",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border_on_top",
      "label": "t:sections.benefits-inline.settings.border_on_top.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border_on_bottom",
      "label": "t:sections.benefits-inline.settings.border_on_bottom.label",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "submenu_item",
      "name": "Menu item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Menu item text",
          "default": "Menu item"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Menu item link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Menu item image (mobile only)"
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge text",
          "default": "New"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sub-menu",
      "category": "Custom"
    }
  ]
}
{% endschema %}
