{{ 'section-text-and-image.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.mobile_image_order == "0" %}
  @media screen and (max-width: 749px) {
    .text-and-image--{{ section.id }}__image {
        order: 0;
    }
    .text-and-image--{{ section.id }}__text {
        order: 1;
    }
  }
  {%- elsif section.settings.mobile_image_order == "1" %}
  @media screen and (max-width: 749px) {
    .text-and-image--{{ section.id }}__text {
        order: 0;
    }
    .text-and-image--{{ section.id }}__image {
        order: 1;
    }
  }
  {% endif %}
{%- endstyle -%}

<div
  id='text-and-image--{{ section.id }}'
  class='section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient'
>
  <div class='page-width tw-grid tw-grid-cols-10 tw-gap-x-10 tw-gap-y-4'>
    <div class='text-and-image--{{ section.id }}__text md:tw-order-2 tw-col-span-10 md:tw-col-span-8 lg:tw-col-span-7'>
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'custom_liquid' -%}
            <div class='custom-liquid'>
              {{ block.settings.custom_liquid }}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    <div class='text-and-image--{{ section.id }}__image md:tw-order-1 tw-col-span-10 md:tw-col-span-2 lg:tw-col-span-3'>
      {% if section.settings.image != blank %}
        <img
          srcset='
            {% if section.settings.image.width >= 350 %}{{ section.settings.image | image_url: width: 350 }} 350w,{% endif %}
            {% if section.settings.image.width >= 750 %}{{ section.settings.image | image_url: width: 750 }} 750w,{% endif %}
            {% if section.settings.image.width >= 1100 %}{{ section.settings.image | image_url: width: 1100 }} 1100w,{% endif %}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
          '
          sizes='(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw'
          src='{{ section.settings.image | image_url: width: 1100 }}'
          loading='lazy'
          fetchpriority='auto'
          class='tw-w-full tw-h-auto'
          width='{{ section.settings.image.width }}'
          height='{{ section.settings.image.height }}'
          alt='{{ section.settings.image.alt | escape }}'
        >
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Simple Text 3/4 Image 1/4",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "mobile_image_order",
      "label": "Mobile image order",
      "options": [
        { "value": "0", "label": "Show image first" },
        { "value": "1", "label": "Show image second" }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "custom_liquid",
      "name": "Liquid For Text",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "Liquid content",
          "default": "<p>Your custom liquid here</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Simple Text 3/4 Image 1/4",
      "category": "Custom",
      "blocks": [
        {
          "type": "custom_liquid"
        }
      ]
    }
  ]
}
{% endschema %}
