{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign content_width_class = 'page-width' -%}
{%- case section.settings.section_content_width -%}
  {%- when 'narrow' -%}
    {%- assign content_width_class = 'page-width page-width--narrow' -%}
  {%- when 'full_width' -%}
    {%- assign content_width_class = '' -%}
{%- endcase -%}

<div class='section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient'>
  <div class='{{ content_width_class }}'>
    {{ section.settings.custom_liquid }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.custom-liquid.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_content_width",
      "label": "t:sections.all.section_content_width.label",
      "options": [
        {
          "label": "t:sections.all.section_content_width.options__1.label",
          "value": "full_width"
        },
        {
          "label": "t:sections.all.section_content_width.options__2.label",
          "value": "page_width"
        },
        {
          "label": "t:sections.all.section_content_width.options__3.label",
          "value": "narrow"
        }
      ],
      "default": "page_width"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-liquid.presets.name"
    }
  ]
}
{% endschema %}
